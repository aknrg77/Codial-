<li id = "comment-<%=comment._id%>">
    <p>
        <%if(locals.user && locals.user.id == i.user.id){ %> 
<small>
        <a class="delete-comment-button" href="/comments/destroy/<%= comment._id%>"><i class="fas fa-trash-alt"></i></a>

</small>
        <%}%>
        <%= comment.content%>
        <%if(locals.user){%>
                <small>
                <a class="like-post-button" data-likes ="<%=comment.likes.length%>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment"><i class="fas fa-thumbs-up"></i>
                <%=comment.likes.length%>
                
                </a>
                <%}else{%>
                    <%=comment.likes.length%><i class="fas fa-thumbs-up"></i>
        
                <%}%>
            
                </small>
        <br>
        <small>
                <%= i.user.name%>
        </small>
</p>




</li>